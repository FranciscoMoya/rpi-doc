{
    "gitbook": "2.x.x",
    "author": "Francisco Moya",
    "variables": {
	"_ck": "<i class='fa fa-check-square-o'/>",
	"_unck": "<i class='fa fa-square-o'/>",
	"ck": "&#9745;",
	"unck": "&#9744;",
	"output": "webpage"
    },
    "styles": {
        "website": "css/website.css",
        "pdf": "css/pdf.css",
        "epub": "css/epub.css"
    },
    "plugins": [
        "mathjax",
        "richquotes",
        "include-codeblock",
        "bibtex-citation",
	"prism", "-highlight"
    ],
    "pdf": {
        "fontSize": 12,
	"paperSize": "a4",
	"pageNumbers": true,
        "margin": {
            "right": 72,
            "left": 72,
            "top": 60,
            "bottom": 60
        },
	"headerTemplate": "<p class='header even_page' style='color: #777;text-align:right'>Taller de Raspberry Pi</p><p class='header odd_page' style='color: #777;text-align:left'>_SECTION_</p>",
        "footerTemplate": "<p class='footer even_page' style='text-align:right'>_PAGENUM_</p><p class='footer odd_page' style='text-align:left'>_PAGENUM_</p>"
    }
}
